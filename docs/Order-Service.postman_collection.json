{
  "info": {
    "name": "Order Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081"
    },
    {
      "key": "API_KEY",
      "value": "secret-api-key"
    }
  ],
  "item": [
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-KEY",
            "value": "{{API_KEY}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "orders"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customerName\": \"Ayoub\"\n}"
        }
      }
    },
    {
      "name": "List Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-KEY",
            "value": "{{API_KEY}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "orders"
          ]
        }
      }
    }
  ]
}